@model List<Product>


<div class="card shadow mt-4 mb-4 border-0">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white">Product List</h2>
            </div>
        </div>

    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6">
                
            </div>

            <div class="col-6 text-end">
                <a asp-controller="Product" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Create New Product</a>
            </div>
        </div>

        <table class="table table-bordered table-striped" style="padding:0px">

            <thead>
                <tr style="padding:0px">

                    <th>Title</th>
                    <th>ISBN</th>
                    <th>Price</th> 
                    <th>Author</th>
                    <th>Category</th> 
                    <th>Actions</th>
                </tr>
            </thead>

            <tbody>

                @foreach (var obj in Model)
                {
                    <tr style="padding:0px">
                        <td>@obj.Title</td>
                        <td>@obj.ISBN</td> 
                        <td>@obj.Price</td>
                        <td>@obj.Author</td>
                        <td>@obj.CategoryId</td>
                       @*  <td>@obj.Price100</td> *@
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-action="Edit" class="btn btn-success mx-2" asp-controller="Product" asp-route-id="@obj.Id"><i class="bi bi-pencil-square"></i> Edit</a>
                                <a asp-action="Delete" class="btn btn-danger mx-2" asp-controller="Product" asp-route-id="@obj.Id"><i class="bi bi-trash3"></i> Delete</a>
                            </div>
                        </td>
                    </tr>
                }

            </tbody>

        </table>
    </div>
</div>


